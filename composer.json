{
    "name": "leanwebstart/civi-api3",
    "description": "CiviCRM Api3 adapter for Laravel applications.",
    "keywords": [
        "civicrm",
        "civicrm api",
        "civicrm laravel"
    ],
    "homepage": "https://github.com/Leanwebstart/CiviApi3",
    "license": "UNLICENSE",
    "authors": [
        {
            "name": "Serge Lachapelle",
            "email": "serge@leanwebstart.com",
            "homepage": "https://leanwebstart.com"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Leanwebstart\\CiviApi3\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": ["leanwebstart\\civi-api3\\CiviApi3ServiceProvider"]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
